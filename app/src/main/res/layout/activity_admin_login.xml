<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminLogin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="20dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Admin Login"
                android:textSize="26dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryblack"
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/banner"
                android:layout_height="200dp"></ImageView>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:hint="UserName"
                android:text="admin"
                android:textColorHint="@color/colorPrimaryblack"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_email"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:hint="Password"
                android:text="admin"
                android:textColorHint="@color/colorPrimaryblack"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/user_login_password"
                android:layout_height="wrap_content"></EditText>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/colorAccent"
                android:id="@+id/user_login_signIn"
                android:background="@color/colorPrimary">
            </Button>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>